{
  "name": "typescript-restful",
  "version": "0.0.1",
  "private": true,
  "description": "The TypeScript RESTful Api",
  "main": "app.ts",
  "scripts": {
    "start": "nodemon",
    "lint": "eslint --ext .ts,.js .; exit 0",
    "test": "npm run lint & npm run mocha",
    "mocha": "mocha -r ts-node/register ./**/*.spec.ts",
    "build": "npm run clear & tsc; exit 0",
    "clear": "rimraf types/api & rimraf dist"
  },
  "keywords": [],
  "author": "Robert Bartlewski",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.19",
    "@types/should": "^13.0.0",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "nodemonConfig": {
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
